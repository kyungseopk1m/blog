---
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';
import SearchModal from '@components/search/SearchModal';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description, image } = Astro.props;
const siteTitle = 'Bask';
const fullTitle = title === 'Home' ? siteTitle : `${title} | ${siteTitle}`;
const siteDescription = description || '개인 블로그';
const siteImage = image || '/favicon.svg';
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="ko" class="">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />

    <!-- 깜빡임 방지: 페이지 로드 시 즉시 테마 적용 -->
    <script is:inline>
      const theme = localStorage.getItem('theme');
      const prefersLight = window.matchMedia('(prefers-color-scheme: light)').matches;
      // 라이트모드: 사용자가 light 선택 OR (선택 없음 AND 시스템이 light)
      const isLight = theme === 'light' || (!theme && prefersLight);
      if (!isLight) {
        document.documentElement.classList.add('dark');
      }
    </script>

    <!-- ViewTransitions 후 테마 복원 -->
    <script is:inline>
      document.addEventListener('astro:after-swap', () => {
        const theme = localStorage.getItem('theme');
        const prefersLight = window.matchMedia('(prefers-color-scheme: light)').matches;
        // 라이트모드: 사용자가 light 선택 OR (선택 없음 AND 시스템이 light)
        const isLight = theme === 'light' || (!theme && prefersLight);
        if (!isLight) {
          document.documentElement.classList.add('dark');
        } else {
          document.documentElement.classList.remove('dark');
        }
      });
    </script>

    <title>{fullTitle}</title>
    <meta name="description" content={siteDescription} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={siteDescription} />
    <meta property="og:image" content={new URL(siteImage, Astro.site)} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={siteDescription} />
    <meta name="twitter:image" content={new URL(siteImage, Astro.site)} />

    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
  </head>
  <body class="min-h-screen flex flex-col bg-white dark:bg-[#1a1a1a] text-slate-900 dark:text-white">
    <div class="max-w-3xl mx-auto w-full px-4 flex flex-col flex-1">
      <slot />
    </div>
    <SearchModal client:only="react" />
  </body>
</html>
