---
interface Props {
  showRss?: boolean;
}

const { showRss = false } = Astro.props;
const currentYear = new Date().getFullYear();
---

<footer class="mt-16 sm:mt-20 mb-4 sm:mb-6 text-center text-slate-600 dark:text-zinc-400 text-xs sm:text-sm">
  {showRss && (
    <a
      href="/rss.xml"
      target="_blank"
      class="inline-flex items-center gap-1 text-slate-600 dark:text-zinc-400 hover:text-[var(--color-accent)] transition-colors mb-2"
    >
      RSS
      <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
        <path d="M7 17L17 7M17 7H8M17 7V16"/>
      </svg>
    </a>
  )}
  <p>
    <span class="mr-2">Copyright &copy; {currentYear}</span>
    <span>Kyungseop Kim</span>
  </p>
</footer>
