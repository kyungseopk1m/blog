---
import Layout from '@layouts/Layout.astro';
import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';
---

<Layout title="404 - Page Not Found">
  <Header />
  <main class="flex-1 py-8 sm:py-12 flex flex-col items-center justify-center">
    <h1 class="text-6xl sm:text-8xl font-bold mb-4" style="color: var(--color-accent);">
      404
    </h1>
    <p class="text-xl text-slate-600 dark:text-zinc-400 mb-8">
      페이지를 찾을 수 없습니다.
    </p>
    <a
      href="/"
      class="px-6 py-3 text-white rounded-lg transition-opacity hover:opacity-90"
      style="background-color: var(--color-accent);"
    >
      홈으로 돌아가기
    </a>
  </main>
  <Footer />
</Layout>
